<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="AngularJS" injector-id="xml">
      <display-name>beans/@schemaLocation</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("schemaLocation")).withNamespace(string().equalTo("http://www.w3.org/2001/XMLSchema-instance")).withParent(xmlTag().withLocalName(string().equalTo("beans")).withNamespace(string().equalTo("http://www.springframework.org/schema/beans")))]]></place>
    </injection>
  </component>
</application>